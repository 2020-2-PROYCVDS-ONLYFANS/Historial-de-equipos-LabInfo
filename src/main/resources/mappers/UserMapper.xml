<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.model.dao.mybatis.mappers.UserMapper">
    <select id="getIdByUsername" resultType="long">
        SELECT
            id
        FROM
            "USERS"
        WHERE
            username = #{username};
    </select>

    <select id="getByUsername" resultMap="UserResultMap">
        SELECT
            u.id,
            u.username,
            u.email,
            u."password",
            u."name",
            r.id AS "ROLE_id",
            r."name" AS "ROLE_name"
        FROM
            "USERS" AS u
                LEFT JOIN
            "USERS_ROLES" AS ur ON u.id = ur."USERS_id"
                LEFT JOIN
            "ROLES" AS r ON r.id = ur."ROLES_id"
        WHERE
            username = #{username};
    </select>

    <select id="getUserRolesByUsername"
            resultMap="edu.eci.cvds.model.dao.mybatis.mappers.RoleMapper.RoleResultMap">
        SELECT
            r.id,
            r."name"
        FROM
            "USERS" AS u
                LEFT JOIN
            "USERS_ROLES" AS ur ON u.id = ur."USERS_id"
                LEFT JOIN
            "ROLES" AS r ON r.id = ur."ROLES_id"
        WHERE
            username = #{username};
    </select>

    <resultMap id="UserResultMap" type="User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="name" property="name"/>
        <collection property="roles" ofType="Role" columnPrefix="ROLE_"
                    resultMap="edu.eci.cvds.model.dao.mybatis.mappers.RoleMapper.RoleResultMap"/>
    </resultMap>
</mapper>